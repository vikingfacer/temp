		// spidev.read(&mut r_buf).unwrap();
		

		let mut transfer = SpidevTransfer::read_write(&tx_buf, &mut rx_buf);
        try!(spi.transfer(&mut transfer));
		
		// while r_buf[0] as char != '\n' {

